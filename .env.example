# ===========================================
# OpenQuest Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# ===========================================
# DATABASE (Required)
# ===========================================
# PostgreSQL connection string
# For Supabase: Get from Project Settings > Database > Connection string
DATABASE_URL="postgresql://postgres:password@db.xxxxx.supabase.co:5432/postgres"

# ===========================================
# AUTHENTICATION (Required)
# ===========================================
# JWT secret for signing tokens (min 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET="your-jwt-secret-minimum-32-characters-long"

# Admin JWT secret (separate from user auth)
ADMIN_JWT_SECRET="your-admin-jwt-secret-minimum-32-characters"

# ===========================================
# EMAIL (Required for password reset)
# ===========================================
# Resend API key - get from https://resend.com/api-keys
RESEND_API_KEY="re_xxxxxxxxxxxxx"

# Email sender address (must be verified in Resend)
EMAIL_FROM="noreply@yourdomain.com"

# ===========================================
# APP CONFIGURATION
# ===========================================
# Base URL for the application
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ===========================================
# ADMIN SETUP (First-time only)
# ===========================================
# Initial admin IDs for setup (comma-separated)
# These are the passwordless login IDs
ADMIN_IDS="admin1,admin2"

# ===========================================
# OPTIONAL CONFIGURATION
# ===========================================

# Rate limiting (requests per minute)
# RATE_LIMIT_RPM="60"

# Enable/disable features
# NEXT_PUBLIC_ENABLE_COMMENTS="true"

# Vercel Analytics (auto-configured on Vercel)
# VERCEL_ANALYTICS_ID=""

# ===========================================
# DEVELOPMENT ONLY
# ===========================================
# Set to 'development' for local dev
# NODE_ENV="development"
